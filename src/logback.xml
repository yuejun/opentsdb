<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!--<jmxConfigurator/>-->
  <property name="LOG_HOME" value="/data1/tsdb/" />
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
    <fileNamePattern>${LOG_HOME}/tsdb.log.%d{yyyy-MM-dd}</fileNamePattern>
      <maxHistory>10</maxHistory>
    </rollingPolicy>

    <encoder>
      <pattern>
        %d{ISO8601} %-5level [%thread] %logger{0}: %msg%n
      </pattern>
    </encoder>
  </appender>

  <appender name="CYCLIC" class="ch.qos.logback.core.read.CyclicBufferAppender">
    <MaxSize>1024</MaxSize>
  </appender>

  <logger name="org.apache.zookeeper" level="warn"/>
  <logger name="org.apache.thrift.server.TNonblockingServer" level="error"/>
  <logger name="org.hbase.async" level="warn"/>
  <logger name="com.stumbleupon.async" level="warn"/>
  <logger name="net.opentsdb.tsd.ConnectionManager" level="warn"/>


  <root level="info">
    <appender-ref ref="FILE" />
    <appender-ref ref="CYCLIC"/>
  </root>

</configuration>
